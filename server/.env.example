# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v*

# Database Configuration
MONGODB_URI_DEV=mongodb://localhost:27017/m3allem_dev
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/m3allem_prod

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@m3allem.ma

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
BCRYPT_SALT_ROUNDS=12

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_PROFILE=10